<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="Введите название фильма"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/buttonSaveMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сохранить фильм"
        android:layout_below="@id/editTextMovie"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonGetMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Получить фильм"
        android:layout_below="@id/buttonSaveMovie"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonGetMovie"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textColor="#000000" />

</RelativeLayout>
