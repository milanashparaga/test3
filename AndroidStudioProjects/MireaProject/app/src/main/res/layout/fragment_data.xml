<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="149dp"
                    android:layout_height="282dp"
                    android:layout_marginLeft="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/anna"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageView"
                    android:paddingLeft="16dp"
                    android:text="Моя любимая песня Анночки Асти"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/subtitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titleTextView"
                    android:layout_toRightOf="@+id/imageView"
                    android:paddingLeft="16dp"
                    android:text="Все твои романы - тяжёлый вид спорта
                    \nКаждый бывший выводил из зоны комфорта
                    \nКаждый бывший тренер личностного роста
                    \nТы стала хитрее, детка стала взрослой"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/subtitleTextView2"
                    android:layout_width="339dp"
                    android:layout_height="368dp"
                    android:layout_below="@+id/titleTextView"
                    android:layout_marginLeft="-162dp"
                    android:layout_marginTop="220dp"
                    android:layout_toRightOf="@+id/imageView"
                    android:paddingLeft="16dp"
                    android:text="Один лишь взгляд, и лютый холод по спине
                    \nОн просто не может в тебе не раствориться
                    \nМальчик поплыл, мальчик попал
                    \nА как он стесняется, а как он целуется
                    \nМальчик поплыл, прям в центре зала
                    \nПусть он танцует, пока танцуется
                    \nВыдох и вдох, выдох, вдох
                    \nМальчик дыши, ты не так уж и плох
                    \nЭтой ночью всё так круто, так аутентично
                    \nТы такой милый, ты такой симпатичный
                    \nГлаза в глаза, басы по низам
                    \nДа, хоть вылези из кожи, она тебе не по зубам
                    \nУ девочек от зависти перекосило лица
                    \nВедь в этом зале каждый в курсе, кто тут царица
                    \nЦарица
                    \nЦарица"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textColor="?attr/colorOnSurface" />
            </RelativeLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
